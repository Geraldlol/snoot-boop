{
  "coreFormulas": {
    "bpPerBoop": {
      "formula": "basePower * (1 + upgradeBonus) * masterBonus * waifuBonus * comboMultiplier * (isCrit ? critMultiplier : 1) * stanceMultiplier * elementBonus",
      "basePower": 1,
      "upgradeScale": 0.1
    },
    "ppPerSecond": {
      "formula": "sum(cat.innerPurr * cat.happiness * cat.loafMastery * realmMultiplier) * waifuBonus * upgradeBonus * (isAFK ? masterAFKBonus : 1) * buildingBonus",
      "basePerCat": 0.1
    },
    "comboMultiplier": {
      "formula": "1 + (min(comboCount, maxCombo) * comboGain)",
      "maxCombo": 100,
      "comboGain": 0.01
    },
    "critChance": {
      "formula": "baseCrit + nikBonus + upgradeBonus + stanceBonus + equipmentBonus",
      "baseCrit": 0.05,
      "maxCrit": 0.75
    },
    "critMultiplier": {
      "formula": "baseCritMult + upgradeBonus + equipmentBonus + stanceBonus",
      "baseCritMult": 10,
      "maxCritMult": 100
    }
  },
  "cultivation": {
    "xpFormula": {
      "description": "XP required for next rank within a realm",
      "formula": "realmXpBase * pow(realmXpScale, rank - 1)",
      "note": "Each realm has different base and scale values defined in cultivation.json"
    },
    "realmBreakthroughMultiplier": {
      "description": "Multiplier applied when entering a new realm",
      "formula": "previousRealmTotal * realmScale",
      "defaultRealmScale": 3.0
    },
    "tribulationDifficulty": {
      "description": "Difficulty scaling for tribulation encounters",
      "formula": "baseDifficulty * pow(1.5, realmOrder - 1)",
      "baseDifficulty": 100
    }
  },
  "cats": {
    "realmMultipliers": {
      "kittenMortal": 1,
      "earthKitten": 2,
      "skyKitten": 5,
      "heavenKitten": 15,
      "divineBeast": 50,
      "celestialBeast": 200,
      "cosmicEntity": 1000
    },
    "starMultipliers": {
      "1": 1.0,
      "2": 1.1,
      "3": 1.25,
      "4": 1.5,
      "5": 2.0,
      "6": 3.0
    },
    "happinessDecayRate": {
      "base": 0.01,
      "perHour": 0.05,
      "minHappiness": 0.1
    },
    "happinessGainRate": {
      "perBoop": 0.5,
      "perFeed": 5,
      "perPet": 2,
      "yuelinBonus": 1.5
    },
    "cultivationXP": {
      "perBoop": 0.1,
      "perDungeonFloor": 10,
      "perHourActive": 5,
      "perHourAFK": 1
    }
  },
  "waifus": {
    "bondGain": {
      "perActivity": {
        "teaCeremony": 10,
        "sparring": 15,
        "meditation": 20,
        "stargazing": 25,
        "cooking": 18,
        "exploring": 30,
        "hotSprings": 35
      },
      "preferredBonus": 1.5,
      "harmonyBonus": 1.1,
      "giftMultipliers": {
        "love": 5.0,
        "like": 2.0,
        "neutral": 1.0,
        "dislike": 0.5
      }
    },
    "cultivationCost": {
      "baseJadeCatnip": 10000,
      "baseDestinyThreads": 100,
      "scalePerRealm": 2.0,
      "successChance": 0.7
    }
  },
  "dungeons": {
    "pagoda": {
      "enemyHpScale": {
        "formula": "baseHp * pow(1.1, floor)",
        "baseHp": 100
      },
      "enemyDamageScale": {
        "formula": "baseDamage * pow(1.08, floor)",
        "baseDamage": 10
      },
      "lootScale": {
        "formula": "baseLoot * pow(1.05, floor)",
        "baseLoot": 10
      },
      "bossFloorInterval": 10,
      "eliteChance": 0.15,
      "treasureChance": 0.1,
      "shopChance": 0.05
    },
    "survival": {
      "waveInterval": 10,
      "enemiesPerWave": {
        "formula": "base + floor(time / 60) * 2",
        "base": 3
      },
      "bossInterval": 300,
      "difficultyScale": {
        "formula": "1 + (time / 60) * 0.1",
        "description": "10% harder per minute"
      }
    },
    "offlineDungeon": {
      "secondsPerFloor": {
        "formula": "60 * max(0.3, 1 - (partyPower / 10000))",
        "baseSeconds": 60
      },
      "survivalChance": {
        "formula": "partyPower / (partyPower + floorDifficulty)"
      },
      "lootPenalty": 0.5
    }
  },
  "equipment": {
    "enhancementCost": {
      "formula": "baseCost * pow(1.5, currentLevel)",
      "baseCost": 100
    },
    "successRate": {
      "formula": "max(0.1, 1 - (currentLevel * 0.01))",
      "failureProtection": {
        "threshold": 5,
        "guaranteedAt": 10
      }
    },
    "statGrowth": {
      "formula": "baseStat * (1 + level * 0.1)",
      "breakpointBonuses": {
        "10": 1.2,
        "25": 1.5,
        "50": 2.0,
        "75": 3.0,
        "100": 5.0
      }
    }
  },
  "prestige": {
    "ascension": {
      "threshold": 1000000000,
      "sealFormula": {
        "description": "Base from PP + bonuses from progress",
        "formula": "floor(log10(pp) - 8) + floor(cats / 20) + floor(waifuBonds / 100) + floor(gooseBoops / 50) + floor(pagodaFloor / 10)",
        "minimum": 1
      },
      "multiplierGain": 0.5
    },
    "reincarnation": {
      "threshold": {
        "ascensions": 10,
        "heavenlySeals": 500
      },
      "karmaFormula": {
        "formula": "floor(seals / 50) + (ascensions * 2) + (maxBondWaifus * 10)",
        "minimum": 1
      },
      "sealRetention": 0.1,
      "multiplierGain": 2.0
    },
    "transcendence": {
      "threshold": {
        "reincarnations": 5,
        "karmaPoints": 1000,
        "realmRequired": "trueImmortal"
      },
      "pointsGain": 1
    }
  },
